mixin addMaskedInput(imAttributes, imAdditional, miTypes)
  include ../../_decoration/_enterArrow/input_decoration_enterArrow
  each value, index in Object.values(imAttributes)
    - value.class += classNames[index] + "_masked "
  div&attributes(imAttributes.blockAttributes)
    if title
      label&attributes(imAttributes.titleAttributes) #{title}
        br
        div&attributes(imAttributes.controlWrapperAttrs)
          if miTypes.includes("subscription")
            +enterArrow()
          input&attributes(imAttributes.controlAttributes)(value=imAdditional)
    else
      label&attributes(imAttributes.titleAttributes)
        div&attributes(imAttributes.controlWrapperAttrs)
          input&attributes(imAttributes.controlAttributes)(value=imAdditional)
          if miTypes.includes("subscription")
            +enterArrow()
