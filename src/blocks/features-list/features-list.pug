mixin features-list({items=[]} = {})
  -const listClass = 'features-list'

  ul(class=`${listClass}`)
    each item, index in items
      if index
        hr(class=`${listClass}__divider`)
      li(class=`${listClass}__item`)
        span(class=`${listClass}__item-image`) #{item.icon}
        div(class=`${listClass}__item-text-container`)
          h3(class=`${listClass}__item-title`) #{item.title}
          span(class=`${listClass}__item-text`) #{item.text}
