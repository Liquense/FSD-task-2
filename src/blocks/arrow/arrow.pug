mixin arrow(attrs={})
  //-type: "expand"/"enter"
  -var defaultAttrs = {type: "expand", isColored: false, isBold: false, isRelative: false}
  -attrs = Object.assign(defaultAttrs, attrs)

  -var coloredClass = attrs.isColored ? "arrow_colored" : ""
  -var boldClass = attrs.isBold ? "arrow_bold" : ""
  -var relativeClass = attrs.isRelative ? "arrow_relative" : ""

  if attrs.type === "expand"
    span(class=`arrow arrow_expand ${coloredClass} ${boldClass} ${relativeClass}`) expand_more
  else if attrs.type === "enter"
    span(class=`arrow arrow_enter ${coloredClass} ${boldClass} ${relativeClass}`) arrow_forward
