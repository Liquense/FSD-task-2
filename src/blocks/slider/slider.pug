include ../title/title
mixin slider({minValue = 0, maxValue = 10, step = 1, title = '', isRange = false, initialValues = [5]} = {})
  -let isRangeModifier = ''
  if isRange
    -isRangeModifier = 'slider_with-range-selection'

  div.slider.js-slider(class=isRangeModifier)
    div.slider__text
      +title({type: 'label', text: title, tag: 'p'})
      p.slider__value.js-slider__value â‚½
    div.slider__container
      div.slider__control.js-slider__control(
        data-min=minValue data-max=maxValue data-step=step
        data-first-value=initialValues[0] data-second-value=initialValues[1]
      )
