include ../title/title
mixin slider({minValue = 0, maxValue = 10, step = 1, title = '', isRange = false, initialValues = [5]} = {})
  -let isRangeModifier = '', secondValue
  if isRange
    -isRangeModifier = 'slider__control_range'
    -secondValue = initialValues[1]

  article.js-slider.slider
    div.slider__text
      +title({type: 'label', text: title})
      p.js-slider__value.slider__value â‚½
    div.slider__container
      div.js-slider__control.slider__control(class=`${isRangeModifier}`
        data-min=minValue data-max=maxValue data-step=step
        data-first-value=initialValues[0] data-second-value=secondValue
      )
