include ../../cards/room-preview-card/room-preview-card
mixin pagination({pageSize = 12, items=[]} = {})
  -const paginationClass = 'pagination'

  nav(class=`js-${paginationClass} ${paginationClass}` data-page-size=pageSize)
    div(class=`js-${paginationClass}__content ${paginationClass}__content`)
      each item, index in items
        div.pagination__item
          +room-preview-card(item)
    div(class=`js-${paginationClass}__buttons ${paginationClass}__buttons`)
