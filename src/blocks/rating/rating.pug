mixin rating({maxRating = 5, rating = -1} = {})
  -const rateButtonClass = 'rating'
  -const starAttributes = {class: `js-${rateButtonClass}__star ${rateButtonClass}__star`}

  div(class=`js-${rateButtonClass} ${rateButtonClass}` data-maxRating=maxRating data-rating=rating)
    - var i = 1
    while i <= maxRating
      - starAttributes["data-index"] = i
      label&attributes(starAttributes) star
      - i++
