include ../checkbox/checkbox
include ../radio-button/radio-button
include ../arrow/arrow
include ../title/title

mixin checkbox-list({isExpandable=false, isNarrow=false, isOpened=false, title='', elements=[]} = {})
  -let expandableModifier = expandedModifier = ''
  if isExpandable
    -expandableModifier = 'checkbox-list_expandable '
    if isOpened
      -expandedModifier = 'checkbox-list_expanded '

  -let narrowModifier = ''
  if isNarrow
    -narrowModifier = 'checkbox-list_narrow '

  fieldset.js-checkbox-list.checkbox-list(class=` ${expandableModifier} ${expandedModifier} ${narrowModifier}`)
    div.js-checkbox-list__title-wrap.checkbox-list__title-wrap
      if title
        legend.checkbox-list__title
          +title({type: 'label', text: title})
        if isExpandable
          div.checkbox-list__expand-arrow
            +arrow({type: 'expand'})
    ul.checkbox-list__container
      each value, index in elements
        li.checkbox-list__item(class=` ${value.description ? `checkbox-list__item_rich` : ''}`)
          +checkbox(value)
