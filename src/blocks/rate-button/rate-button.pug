mixin rateButton({maxRating = 5, rating = -1})
  -const rateButtonClass = 'rate-button'
  -const starClassName = `${rateButtonClass}__star`
  -const emptyStarModifierClassName = `${rateButtonClass}_type_empty__star`
  -const starAttrs = {class: `js-${starClassName} ${starClassName} ${emptyStarModifierClassName}`}

  div(class=`js-${rateButtonClass} ${rateButtonClass}` data-maxRating=maxRating data-rating=rating)
    - var i = 1
    while i <= maxRating
      - starAttrs["data-index"] = i
      label&attributes(starAttrs) star
      - i++
