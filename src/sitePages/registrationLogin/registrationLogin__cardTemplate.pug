if login==="true"
	include ../../Cards/login-card/login-card
	+loginCard()(addClasses = "registration-login__login-card")
	img.registration-login__login-background-image(
		src=require("../../assets/images/registrationLogin-background.jpg") alt="backgroundImage")
else
	include ../../Cards/registrationCard/registrationCard
	+registrationCard()(addClasses = "registration-login__registration-card")
	img.registration-login__registration-background-image(
		src=require("../../assets/images/registrationLogin-background.jpg") alt="backgroundImage")
