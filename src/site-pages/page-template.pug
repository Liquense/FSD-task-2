<!DOCTYPE html>
html(lang='ru')
  head
    -let options = {title: 'TOXIN'}
    block options

    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='keywords' content=options.keywords)
    meta(name='description' content=options.description)
    link(rel='apple-touch-icon' sizes='180x180' href='/favicons/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='/favicons/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='/favicons/favicon-16x16.png')
    link(rel='manifest' href='/favicons/site.webmanifest')
    title #{options.title}
  body
    include ../blocks/header/header
    include ../blocks/footer/footer
    +header(
      {
        loginText: 'Войти',
        registerText: 'Зарегистрироваться',
        content: [
          {text: 'О нас'},
          {
            text: 'Услуги',
            children: [
              {text: 'Услуга 1', children: [{text: '456', children: [{text: '1231'}]}]},
              {text: 'Услуга 2', children: [{text: '123'}]}
            ]
          },
          {text: 'Вакансии'},
          {text: 'Новости'},
          {
            text: 'Соглашения',
            children: [
              {text: 'Соглашение 1', children: [{text: '456', children: [{text: '1231'}]}]},
              {text: 'Соглашение 2', children: [{text: '123'}]}
            ]
          }
        ],
        isNarrow: true
      }
    )

    block content

    +footer(
      {
        logo: logoPath,
        text: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
        copyright: 'Copyright © 2018 Toxin отель. Все права зачищены.',
        links: [
          {
            title: 'Навигация',
            links:
              [
                {text: 'О нас'},
                {text: 'Новости'},
                {text: 'Служба поддержки'},
                {text: 'Услуги'}
              ]
          },
          {
            title: 'О нас',
            links:
              [
                {text: 'О сервисе'},
                {text: 'Наша команда'},
                {text: 'Вакансии'},
                {text: 'Инвесторы'}
              ]
          },
          {
            title: 'Служба поддержки',
            links:
              [
                {text: 'Соглашения'},
                {text: 'Сообщества'},
                {text: 'Связь с нами'}
              ]
          }
        ],
        subscription: {
          title: 'Подписка',
          text: 'Получайте специальные предложения и новости сервиса',
          emailPlaceholder: 'Email'
        }
      }
    )
