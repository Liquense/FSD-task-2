  include ../../blocks/input/input
  include ../../blocks/slider/slider
  include ../../blocks/list/list
  include ../../blocks/pagination/pagination
  include ../../blocks/date-picker/date-picker
  include ../../blocks/dropdown/dropdown
  div.search-room
    div.js-search-room__show-sidebar-button.search-room__show-sidebar-button filter_list
    div.search-room__sidebar
      div.search-room__staying-dates
        +datepicker({title: 'Даты пребывания в отеле', width: 'medium', placeholder: 'ДД.ММ.ГГГГ', data: ['19.08.2019', '23.08.2019']})
      div.search-room__guests
        +dropdown({
          title: 'Гости', dropdownType: 'customers', width: 'medium', placeholder: 'Сколько гостей',
          data: [{name: 'Взрослые', value: 3}, {name: 'Дети', value: 0}, {name: 'Младенцы', value: 1}]
        })
      div.search-room__price-per-day-slider-container
        div.search-room__price-per-day-slider-filter
          +slider({minValue: 0, maxValue: 16000, step: 100, title: 'Диапазон цены', isRange: true, initialValues: [5000, 10000]})
        p.search-room__price-per-day-text Стоимость за сутки пребывания в номере
      -let checkButtons = []
      -checkButtons.push({text: 'Можно курить'});
      -checkButtons.push({text: 'Можно с питомцами', isChecked: true});
      -checkButtons.push({text: 'Можно приглашать гостей (до 10 человек)', isChecked: true});
      div.search-room__benefits-filter
        +list({type: 'checkbox', title: 'Checkbox buttons', elements: checkButtons})
      -const richButtons = []
      -richButtons.push({text: 'Широкий коридор', description: 'Ширина коридоров в номере \n не менее 91 см.'});
      -richButtons.push({text: 'Помощник для инвалидов', description: 'На 1 этаже вас встретит специалист \n и проводит до номера'});
      div.search-room__availability-filter
        +list({type: 'checkbox', title: 'Доступность', elements: richButtons})
      div.search-room__room-equipment-filter
        +dropdown({title: 'Удобства номера', width: 'medium', dropdownType: 'rooms', placeholder: 'Комплектация номера',
          data: [{name: 'Спальни', value: 2}, {name: 'Кровати', value: 2}, {name: 'Ванные комнаты', value: 0}]
        })
      -checkButtons = []
