include ../../blocks/double-date-picker/double-date-picker
include ../../blocks/button/button
include ../../blocks/dropdown/dropdown

mixin booking-card({roomNumber, roomType, dailyPrice, paymentPeriod='в сутки', currency='₽', arrivalDate, departureDate, dropdownItems=[], services, additionalPrice} = {})
  form.js-booking-card.booking-card
    header.booking-card__header
      div.booking-card__room-info
        span.booking-card__number-text №
        h2.booking-card__room-num #{roomNumber}
        span.booking-card__room-type #{roomType}
      div.booking-card__price-info
        span.js-booking-card__daily-price.booking-card__daily-price(data-daily-price=dailyPrice data-currency=currency) #{dailyPrice}#{currency}
        span.booking-card__payment-period  #{paymentPeriod}
    div.js-booking-card__range-picker.booking-card__range-picker
      +double-date-picker({firstTitle: 'Прибытие', secondTitle: 'Выезд', firstDate: arrivalDate, secondDate: departureDate})
    div.js-booking-card__guests-dropdown.booking-card__guests-dropdown
      +dropdown({title: 'Гости', unifiedCaption: 'гост|ь|я|ей', placeholder: 'Сколько гостей', data: dropdownItems})
    section.booking-card__receipt
      p.js-booking-card__staying-cost-calculation.booking-card__staying-cost-calculation placeholder
      i.booking-card__placeholder
      p.js-booking-card__staying-cost-sum.booking-card__staying-cost-sum placeholder
      p.js-booking-card__services.booking-card__services(data-services=services)
      i.booking-card__info-icon i
      p.js-booking-card__services-sum.booking-card__services-sum
      p.booking-card__additional-services-text Сбор за дополнительные услуги
      i.booking-card__info-icon i
      p.js-booking-card__additional-services-sum.booking-card__additional-services-sum(data-addServices=additionalPrice) #{additionalPrice}#{currency}
    section.booking-card__summary
      h2.booking-card__summary-text Итого
      div.booking-card__summary-dash-underline
      span.js-booking-card__summary-total-cost.booking-card__summary-total-cost
    div.booking-card__booking-button
      +button({text: 'Забронировать', type: 'filled', size: 'wide', decoration: 'enter-arrow'})
