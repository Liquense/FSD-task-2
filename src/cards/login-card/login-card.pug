include ../../blocks/input/input
include ../../blocks/button/button

mixin loginCard(data={})
  -var addClasses = attributes.addClasses ? attributes.addClasses : ''
  div.login-card(class = addClasses)
    h3.login-card__title.text_type_item-title Войти
    div.login-card__email-input
      +input({type: "text", placeholder: "Email"})
    div.login-card__password-input
      +input({type: "text", placeholder: "Пароль"})
    div.login-card__login-button
      +Button({text: "Войти", type: "filled", size: "wide", decoration: "enter-arrow"})
    div.login-card__create-account-container
      span.login-card__havent-account.text_type_regular Нет аккаунта на Toxin?
      div.login-card__create-login-button
        +Button({text: "Создать", type: "bordered"})
